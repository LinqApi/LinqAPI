<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - LinqApi Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" />
    <!-- jQuery UI CSS for draggable elements -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <!-- Custom CSS -->
    <style>
        /* Overall layout styling */
        body {
            margin: 0;
            padding: 0;
            background: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        header {
            background: #007bff;
            color: #fff;
            padding: 1rem 0;
        }

            header h1 {
                margin: 0;
                font-size: 1.8rem;
            }

        footer {
            background: #e9ecef;
            padding: 0.5rem 0;
            text-align: center;
            font-size: 0.9rem;
        }

        .container-fluid {
            padding: 0;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="container-fluid">
        <div class="container">
            <h1>LinqApi Dashboard</h1>
        </div>
    </header>
    <main class="container-fluid p-0">
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            <span>&copy; @DateTime.Now.Year - LinqApi Dashboard</span>
        </div>
    </footer>
    <!-- Bootstrap 5 Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery and jQuery UI for draggable functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
