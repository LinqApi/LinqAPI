@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Health Check";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">System Health Check</h1>
        <div class="row">
            <!-- Uptime Chart -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Uptime
                    </div>
                    <div class="card-body">
                        <canvas id="uptimeChart"></canvas>
                    </div>
                </div>
            </div>
            <!-- CPU Usage Chart -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        CPU Usage
                    </div>
                    <div class="card-body">
                        <canvas id="cpuChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Memory Usage Chart -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Memory Usage
                    </div>
                    <div class="card-body">
                        <canvas id="memoryChart"></canvas>
                    </div>
                </div>
            </div>
            <!-- Disk Usage Chart -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Disk Usage
                    </div>
                    <div class="card-body">
                        <canvas id="diskChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Network Latency Chart -->
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header">
                        Network Latency
                    </div>
                    <div class="card-body">
                        <canvas id="networkChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Uptime Chart Data: emphasizing 100% uptime
        var ctxUptime = document.getElementById('uptimeChart').getContext('2d');
        var uptimeChart = new Chart(ctxUptime, {
            type: 'doughnut',
            data: {
                labels: ['Uptime', 'Downtime'],
                datasets: [{
                    data: [100, 0],
                    backgroundColor: ['#28a745', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'System Uptime'
                    }
                }
            }
        });

        // CPU Usage Chart
        var ctxCpu = document.getElementById('cpuChart').getContext('2d');
        var cpuChart = new Chart(ctxCpu, {
            type: 'line',
            data: {
                labels: ['0', '2', '4', '6', '8', '10'],
                datasets: [{
                    label: 'CPU Usage (%)',
                    data: [20, 30, 25, 40, 35, 30],
                    fill: false,
                    borderColor: 'blue'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'CPU Usage Over Time'
                    }
                }
            }
        });

        // Memory Usage Chart
        var ctxMemory = document.getElementById('memoryChart').getContext('2d');
        var memoryChart = new Chart(ctxMemory, {
            type: 'line',
            data: {
                labels: ['0', '2', '4', '6', '8', '10'],
                datasets: [{
                    label: 'Memory Usage (%)',
                    data: [50, 55, 60, 58, 62, 60],
                    fill: false,
                    borderColor: 'orange'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Memory Usage Over Time'
                    }
                }
            }
        });

        // Disk Usage Chart
        var ctxDisk = document.getElementById('diskChart').getContext('2d');
        var diskChart = new Chart(ctxDisk, {
            type: 'bar',
            data: {
                labels: ['C:', 'D:', 'E:'],
                datasets: [{
                    label: 'Disk Usage (%)',
                    data: [70, 65, 80],
                    backgroundColor: ['purple', 'teal', 'gray']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Disk Usage'
                    }
                }
            }
        });

        // Network Latency Chart
        var ctxNetwork = document.getElementById('networkChart').getContext('2d');
        var networkChart = new Chart(ctxNetwork, {
            type: 'line',
            data: {
                labels: ['0', '2', '4', '6', '8', '10'],
                datasets: [{
                    label: 'Latency (ms)',
                    data: [15, 20, 18, 22, 19, 17],
                    fill: false,
                    borderColor: 'green'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Network Latency Over Time'
                    }
                }
            }
        });
    </script>
</body>
</html>
